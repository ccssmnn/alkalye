---
let requestUrl = new URL(Astro.request.url)
let siteBaseUrl = Astro.site ?? new URL(requestUrl.origin)
let canonicalUrl = new URL(
	requestUrl.pathname + requestUrl.search,
	siteBaseUrl,
).toString()
let ogImageUrl = new URL(
	"/icons/alkalye-social-invite.png",
	siteBaseUrl,
).toString()
let title = "You've been invited to collaborate"
let description =
	"Someone invited you to collaborate on a document. Join them on Alkalye - a beautiful markdown editor with e2e encryption and realtime collaboration."
---

<!doctype html>
<html lang="en">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalUrl} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:image" content={ogImageUrl} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImageUrl} />
		<meta name="robots" content="noindex, nofollow" />
		<meta name="author" content="Alkalye" />
		<meta http-equiv="refresh" content="0;url=/app/invite" />
		<style>
			body {
				font-family: ui-sans-serif, system-ui, sans-serif;
				display: grid;
				place-content: center;
				min-height: 100dvh;
				margin: 0;
			}
		</style>
	</head>
	<body>
		<a href="/app/invite">Continue to invite page</a>
		<script>
			let next = `/app/invite${window.location.search}${window.location.hash}`
			window.location.replace(next)
		</script>
	</body>
</html>
